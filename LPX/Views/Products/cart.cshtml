@model IEnumerable<LPX.Models.FoodModel>
@{
    ViewData["Title"] = "LPX Cart";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/cart.js" type="text/javascript"></script>
 <link href="~/css/cart.css" rel="stylesheet">
<div class="dropdown" id="dropdownbutton">
  <button class="btn btn-link dropdown-toggle pull-right" type="button" data-toggle="dropdown">Saved Order Gudes
  <span class="caret"></span></button>


	<div class="container">
  <h4>Current order <span><h1 id="cartnote">To ensure the highest procurement possible, If you make a mistake, Please cancel your order and start again. Another option is to contact your Suppliers and let them know that you made user error. </h1></span></h4>
  <br />

		  <div id="tablediv">


			<table id="ordertable" class="table table-hover">  
        <thead>  
		<th></th> 			
		<th>Product Name</th> 
		<th>Amount</th>  
            <th>Brand</th>  
            <th>PackSize</th> 
			
					

        </thead>  


    @foreach (var item in @Model)  
{  
        
        <tr> 	
<td><input type="checkbox" name="checkbox1" />&nbsp;</td>	
 <td id="id" style="display:none;">  
</td>  
            <td class="productname">  
@item.ProductName  
</td> 


	<td id="amount">  
	<input type="number" name="amount" min="1" value="1">					
</td>  			
     <td class="brand">  
@item.Brand  
</td>  
            <td class="packsize">  
@item.PackSize  
</td>  
    </tr>  
  
}  
  
    </table>

		</div>






    <input type="button" class="btn btn-primary pull-right" onclick="prepareorder()" value="Prepare Order">
    <input type="button" class="btn btn-warning " value="Back to Search" id="backtosearch" onclick="test()">
      <input type="button" class="btn btn-danger " value="Cancel Order"  name="cancelorder"   onclick="CancelOrder()">
      <input type="button" class="btn btn-warning " value="Save Order Guide"  name="saveorderguide" >



		</div>
        <br>

	<div id="formarea" style="display:none;">
  <form>
    <fieldset>
      <legend>Sales rep info<span><input type="button" class="btn btn-danger  btn-sm pull-right" value="Close"  name="submitorder" id="closebutton"  onclick="CloseSellerPane()" style="width:80px; position:absolute; right:375px;"></span></legend>
      <br />
      <h4 class="center">Please select and confrim suppliers</h4>



      <br />


 

<br />


				


<select id="select" style= "display: table; margin: 0 auto; width:200px; height:100px;" multiple>


</select>
		<br>

<input type="button" class="btn btn-success  btn-sm " value="Submit Order"  name="submitorder" id="submitbutton" onclick="sendorder()">


				

    </fieldset>
  </form>




</div>
