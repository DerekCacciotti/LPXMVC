@model IEnumerable<LPX.Models.OrderData>
@{
    ViewData["Title"] = "Order Details";

}

<script src="~/js/supplierdetails.js" type="text/javascript"></script>


<div class="container" id="ordersection">

    <table id="order-table" class="table">

		 <thead>  
            <th>Item</th>  
            <th>Brand</th>  
            <th>Amount</th>
			<th>Pack Size</th>
			<th>Suppliers Price</th>
            

        </thead> 





    @foreach(var data in @Model)
    {
    <tr>    
 <td class="productname">  
@data.ProductName  
</td> 


    <td class="brand">  
    @data.Brand                
</td>           
     <td class="amount">  
@data.Amount
</td>  

<td class="packsize">
@data.PackSize
</td> 
<td id="supplierprice">
 <input type="number" name="suppliersprice" min="1" value="1">       
</td>

</tr>  

            
    }



  </table>







