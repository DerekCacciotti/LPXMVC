@{
    ViewData["Title"] = "Register Suppliers";
}

<link rel="stylesheet" href="~/css/login.css">

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Register Suppliers</h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                    alt="">
                <form class="form-signin" action="/signup/commitsuppliers" method="post">
                       <input type="text" class="form-control" placeholder="Supplier Name" name="SupplierName" required autofocus>
                       <input type="text" class="form-control" placeholder="Supplier Email" name="SupplierEmail" required autofocus>
                      
                <button class="btn btn-lg btn-success btn-block" id="signup button">
                    Submit</button>
                <label class="checkbox pull-left">
                </label>
                <a href="/home/contact" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                </form>
            </div>

        </div>
    </div>
</div>